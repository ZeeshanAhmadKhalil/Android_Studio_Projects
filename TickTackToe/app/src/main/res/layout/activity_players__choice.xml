<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mk141.ticktacktoe.Players_Choice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This Will Change:"
        android:id="@+id/player1_name_choice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This Will Change:"
        android:id="@+id/player2_name_choice"
        android:layout_below="@+id/player1_radio_group"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/player2_radio_group"
        android:layout_marginTop="50dp"
        android:onClick="to_game_started_activity"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player1_name_choice"
        android:layout_marginTop="30dp"
        android:id="@+id/player1_radio_group"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cross"
            android:id="@+id/player1_cross"
            android:checked="true"
            android:onClick="player1_chooses" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle"
            android:id="@+id/player1_circle"
            android:checked="false"
            android:onClick="player1_chooses" />

    </RadioGroup>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player2_radio_group"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/player2_name_choice"
        android:layout_marginTop="30dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cross"
            android:id="@+id/player2_cross"
            android:checked="false"
            android:onClick="player2_chooses" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle"
            android:id="@+id/player2_circle"
            android:checked="true"
            android:onClick="player2_chooses" />
    </RadioGroup>
</RelativeLayout>